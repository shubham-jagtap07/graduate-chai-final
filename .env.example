# Next.js environment variables
# If you provide these, uploads will go to Cloudinary (recommended for production)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_UPLOAD_PRESET=
# Optional: organize assets under a folder
CLOUDINARY_UPLOAD_FOLDER=graduatechai/images

# Alternatively, enable signed uploads (preferred for production):
# Format: cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_URL=

# Backend API Configuration (Server-side only - more secure)
BACKEND_URL=https://gtbackend-1-pnnq.onrender.com

# Fallback Backend URL (Client-side accessible - use only if needed)
NEXT_PUBLIC_BACKEND_URL=https://gtbackend-1-pnnq.onrender.com

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Optional: Custom domain for production
NEXT_PUBLIC_SITE_URL=https://your-domain.com/images

# If CLOUDINARY_* are not set, uploads will be stored locally during development at /public/images
# No additional variables are needed for the local fallback.
